[DXR]
enabled_plugins = *
disabled_plugins = python buglink xpidl

[swift]
source_folder       = /home/dxr/dxr/projects/swift-source
object_folder       = /home/dxr/dxr/projects/swift-source
build_command       = \
  ./swift/utils/build-script --extra-cmake-options='-DLLVM_PARALLEL_LINK_JOBS=2' && \
  env CXX_FLAGS="-Xclang -load -Xclang $HOME/dxr/dxr/plugins/clang/libclang-index-plugin.so -Xclang -add-plugin -Xclang dxr-index -Xclang -plugin-arg-dxr-index -Xclang $HOME/dxr/projects/swift-source" \
    ./build_with_dxr.py --build-path ./build
